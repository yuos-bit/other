#!/bin/sh

touch /etc/crontabs/root

uci set luci.main.lang=zh_cn
#设置默认主题
#uci set luci.main.mediaurlbase=/luci-static/bootstrap_mod
uci commit luci

uci set system.@system[0].timezone=CST-8
uci set system.@system[0].zonename=Asia/Shanghai
uci commit system

uci set fstab.@global[0].anon_mount=1
uci commit fstab

ln -sf /sbin/ip /usr/bin/ip

sed -i '/lienol/d' /etc/opkg/distfeeds.conf
sed -i '/other/d' /etc/opkg/distfeeds.conf
#sed -i 's/downloads.openwrt.org/openwrt.proxy.ustclug.org/g' /etc/opkg/distfeeds.conf
#sed -i 's/http/https/g' /etc/opkg/distfeeds.conf
sed -i "s/# //g" /etc/opkg/distfeeds.conf

# 更改ipk源
sed -i 's#downloads.openwrt.org#mirrors.cloud.tencent.com/lede#g' /etc/opkg/distfeeds.conf
# 设置默认密码admin
sed -i 's/root::0:0:99999:7:::/root:$1$wEehtjxj$YBu4quNfVUjzfv8p\/PBo5.:0:0:99999:7:::/g' /etc/shadow
sed -i 's/root:::0:99999:7:::/root:$1$wEehtjxj$YBu4quNfVUjzfv8p\/PBo5.:0:0:99999:7:::/g' /etc/shadow
# 设置DHCP
uci set dhcp.lan.ra='server'
uci set dhcp.lan.dhcpv6='server'
uci set dhcp.lan.ra_management='1'
uci set dhcp.lan.ra_default='1'
#uci set dhcp.@dnsmasq[0].localservice=0
#uci set dhcp.@dnsmasq[0].nonwildcard=0
uci delete dhcp.lan.ra
uci delete dhcp.lan.dhcpv6
uci delete dhcp.lan.ndp
uci set dhcp.lan.start='2'         
# 设置 IP 地址池起始地址
uci set dhcp.lan.limit='50'          
# 设置地址池大小
uci set dhcp.lan.leasetime='12h'     
# 设置租约时间
uci commit dhcp                      
# 保存配置

uci set network.lan.ipaddr='10.32.0.1'
uci set network.lan.netmask='255.255.255.0'
uci set network.lan.gateway='10.32.0.1'
uci set network.lan.dns='223.5.5.5 119.29.29.29 8.8.8.8'
uci set network.lan.ip6assign='64'
uci set network.lan.ifname='eth0'

uci commit network

# 参考: https://github.com/morrownr/USB-WiFi/discussions/145
# 解决接口报错不受支持的协议问题

uci set network.wan
uci set network.wan.ifname='wan'

uci set network.wan6
uci set network.wan6.ifname='wan'
uci set network.wan6.reqaddress='try'
uci set network.wan6.reqprefix='auto'
##########################################
# 方案二：动态设置主机名和无线 SSID
#
# 从 /tmp/sysinfo/model 获取设备型号（请根据实际情况修改路径）
DEVICE_MODEL=$(cat /tmp/sysinfo/model 2>/dev/null)
[ -z "$DEVICE_MODEL" ] && DEVICE_MODEL="OpenWrt"  # 若获取失败则使用默认值

# 获取无线网口 MAC 地址（这里假设无线接口为 wlan0，根据实际情况调整）
MAC=$(cat /sys/class/net/eth1/address 2>/dev/null)
if [ -n "$MAC" ]; then
    # 去除冒号后取前4位，并转换为大写
    MAC_LAST4=$(echo "$MAC" | sed 's/://g' | awk '{print substr($0,1,4)}' | tr '[:lower:]' '[:upper:]')
else
    MAC_LAST4="XXXX"
fi

# 生成新的 SSID，格式为“设备型号+_MAC后四位”
NEW_SSID="${DEVICE_MODEL}_${MAC_LAST4}"

# 设置系统主机名为设备型号
uci set system.@system[0].hostname="${DEVICE_MODEL}"
uci commit system

##########################################
# 设置无线配置（动态 SSID）
# 2.4G 无线
uci set wireless.default_MT7981_1_1.ssid="${NEW_SSID}"
uci set wireless.default_MT7981_1_1.encryption='sae-mixed'
uci set wireless.default_MT7981_1_1.key='1234567890'
uci set wireless.default_MT7981_1_1.uapsd='0'
uci set wireless.default_MT7981_1_1.mumimo_dl='1'
uci set wireless.default_MT7981_1_1.mumimo_ul='1'
# 5G 无线：在 SSID 后增加 -5G
uci set wireless.default_MT7981_1_2.ssid="${NEW_SSID}-5G"
uci set wireless.default_MT7981_1_2.encryption='sae-mixed'
uci set wireless.default_MT7981_1_2.key='1234567890'
uci set wireless.default_MT7981_1_2.uapsd='0'
uci set wireless.default_MT7981_1_2.mumimo_dl='1'
uci set wireless.default_MT7981_1_2.mumimo_ul='1'
uci commit wireless
# 设置硬件加速
uci set turboacc.global.set='1'
uci set turboacc.config.fullcone='1'
uci set turboacc.config.fastpath='mediatek_hnat'
uci set turboacc.config.fastpath_mh_eth_hnat='1'
uci set turboacc.config.fastpath_mh_eth_hnat_v6='1'
uci set turboacc.config.fastpath_mh_eth_hnat_macvlan='1'
uci set turboacc.config.fastpath_mh_eth_hnat_ppenum='1'
uci set turboacc.config.tcpcca='cubic'

sed -i '/option disabled/d' /etc/config/wireless
sed -i '/set wireless.radio${devidx}.disabled/d' /lib/wifi/mac80211.sh
wifi up
# 

# 删除状态页不需显示的
rm -rf /usr/lib/lua/luci/view/admin_status/index
#mv -f /usr/lib/lua/luci/view/admin_status/index /usr/lib/lua/luci/view/admin_status/index_backup 2>/dev/null

sed -i 's#openwrt/luci#lienol/openwrt-luci#g' /usr/lib/lua/luci/view/themes/*/footer.htm

#禁用某些可能会自启动且用不上的依赖包服务
/etc/init.d/php7-fastcgi disable 2>/dev/null
/etc/init.d/php7-fpm disable 2>/dev/null
/etc/init.d/php8-fastcgi disable 2>/dev/null
/etc/init.d/php8-fpm disable 2>/dev/null
/etc/init.d/softethervpnbridge disable 2>/dev/null
/etc/init.d/softethervpnserver disable 2>/dev/null
/etc/init.d/softethervpnclient disable 2>/dev/null
/etc/init.d/haproxy disable 2>/dev/null
/etc/init.d/kcptun disable 2>/dev/null

chmod 0755 /etc/init.d/*

rm -rf /tmp/luci-*cache

# 开启隐藏功能
echo "0xDEADBEEF" >> /etc/config/google_fu_mode

# 设置日志
sed -i '/log-facility/d' /etc/dnsmasq.conf
echo "log-facility=/dev/null" >> /etc/dnsmasq.conf
# 清空缓存
rm -rf /tmp/luci-modulecache/
rm -f /tmp/luci-indexcache

exit 0
